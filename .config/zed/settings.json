// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run `zed: open default settings` from the
// command palette (cmd-shift-p / ctrl-shift-p)
{
  "file_scan_exclusions": [
    "**/.git",
    "**/.svn",
    "**/.hg",
    "**/CVS",
    "**/.DS_Store",
    "**/Thumbs.db",
    "**/.classpath",
    "**/.settings",
    "**/*.bin",
    "**/*.o"
  ],
  "format_on_save": "on",
  "terminal": {
    "cursor_shape": "bar"
  },
  "features": {
    "notebooks": true
  },
  "languages": {
    "Python": {
      "language_servers": ["!pyright", "..."]
    }
  },
  "lsp": {
    "pylsp": {
      "settings": {
        "plugins": {
          "mypy": {
            "enabled": true
          },
          "flake8": {
            "enabled": true
          },
          "pycodestyle": {
            "enabled": false
          },
          "pyflakes": {
            "enabled": false
          }
        }
      }
    }
  },
  "agent": {
    "default_model": {
      "provider": "openai",
      "model": "gpt-4o-mini"
    },
    "version": "2"
  },
  "ui_font_size": 16,
  "buffer_font_family": "JuliaMono",
  "buffer_font_size": 16,
  "theme": {
    "mode": "system",
    "light": "Iceberg",
    "dark": "One Dark"
  }
}
