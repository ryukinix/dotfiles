#!/usr/bin/env python3

"""\
usage: downcase [FILES...]

If no FILES is provided, try to downcase of input.

Author: Manoel Vilela
"""
import sys
import os


def usage():
    sys.stderr.write(__doc__)


def fname_lower(fpath: str) -> str:
    fname_lower = os.path.basename(fpath).lower()
    fdir = os.path.dirname(fpath)
    return os.path.join(fdir, fname_lower)


def downcase_files(args):
    for f in args:
        new_f = fname_lower(f)
        if f != new_f:
            os.system(f"mv -v '{f}' '{new_f}'")


def downcase_io():
    try:
        while True:
            line = input()
            print(line.lower())
    except EOFError:
        pass


def main():
    args = sys.argv[1:]

    if len(args) == 0:
        downcase_io()
    elif any(k in args for k in ('-h', '--help')):
        usage()
    else:
        downcase_files(args)


if __name__ == '__main__':
    main()
